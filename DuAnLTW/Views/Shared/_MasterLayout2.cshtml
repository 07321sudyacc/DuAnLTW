<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/mystyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <script src="https://kit.fontawesome.com/bdcac81df8.js" crossorigin="anonymous"></script>
    <link href="~/Content/fontawesome-free-6.2.1-web/css/fontawesome.css" rel="stylesheet">
    <link href="~/Content/fontawesome-free-6.2.1-web/css/brands.css" rel="stylesheet">
    <link href="~/Content/fontawesome-free-6.2.1-web/css/solid.css" rel="stylesheet">
</head>

<body>
    <nav class="navbar navbar-expand-lg" style="background-color: #003768">
        <div class="container-fluid">
            <a style="color:white" class="navbar-brand" href="~/Home/Trangchu">Grocery Shop</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a style="color:white" class="nav-link" href="~/Categories"><i class="fa-solid fa-list"></i>Nhóm Sản Phẩm</a>
                    <a style="color:white" class="nav-link" href="~/Products"><i class="fa-solid fa-bars-progress"></i>Quản lí Sản Phẩm</a>
                    <a style="color:white" class="nav-link" href="#"><i class="fa-solid fa-phone"></i>Liên Hệ</a>
                    <a style="color:white" class="nav-link" href="#"><i class="fa-solid fa-thumbs-up"></i>Giới thiệu</a>
                    @if (Session["ID"] != null)
                    {
                        <a style="color:white" class="nav-link" href="~/Home/TrangChu"><i class="fa-solid fa-user"></i>Đăng xuất</a>
                        Session["ID"] = null;
                    }
                    else
                    {
                        <a style="color:white" class="nav-link" href="~/Users/Login"><i class="fa-solid fa-user"></i>Đăng Nhập</a>
                    }
                </div>
            </div>
            <div class="ms-auto">
                @Html.Action("CartPartial", "Cart")
            </div>

        </div>
    </nav>
    <br />
    <div id="div-main">
        <div style="width:25%">
            <div id="div-left">
                <ul class="list-group">
                    <li class="list-group-item" style="background-color: #003768;color:white"><h3>Danh mục sản phẩm</h3></li>
                    <li class="list-group-item"><a href="/CustomerProducts/Food" style="text-decoration: none;color:black">Thực phẩm</a></li>
                    <li class="list-group-item"><a href="/CustomerProducts/Drink" style="text-decoration: none; color: black">Thức uống</a></li>
                    <li class="list-group-item"><a href="/CustomerProducts/HMP" style="text-decoration: none; color: black">Hóa-mỹ phẩm</a></li>
                    <li class="list-group-item"><a href="/CustomerProducts/Baby" style="text-decoration: none; color: black">Tã em bé</a></li>
                    <li class="list-group-item"><a href="/CustomerProducts/VP" style="text-decoration: none; color: black">Văn phòng phẩm</a></li>
                    <li class="list-group-item"><a href="/CustomerProducts/SH" style="text-decoration: none; color: black">Đồ sinh hoạt</a></li>
                </ul>
            </div>
        </div>
        <div id="div-containt">
            @RenderBody()
        </div>
    </div>
    <div id="div-footer">
        <h5 class="text-center" style="margin-top:3px">Grocery Store</h5>
        <div class="text-center"><i class="fa-solid fa-phone-volume"></i> Hotline: 0999000000</div>
        <div class="text-center"><i class="fa-solid fa-envelope"></i> Email : grocerystore@gmail.com</div>
        <div class="text-center"><i class="fa-brands fa-facebook"></i> Facebook : fb.com/GroceryStore/</div>
    </div>
</body>
</html>